<script>
document.addEventListener('DOMContentLoaded', () => {

    const data = {
        countries: {
            us: {
                name: "United States",
                context: "DEI is shaped by civil rights law but exists in a highly polarized social environment. The key is framing DEI as enhancing meritocracy for everyone.",
                focus: ["Race & Ethnicity", "Gender", "LGBTQ+", "Disability", "Veteran Status"],
                dos: ["Frame DEI as enhancing meritocracy.", "Use the business case to justify initiatives.", "Use inclusive language for all."],
                donts: ["Use divisive or activist language.", "Frame DEI as a zero-sum game."]
            },
            ca: {
                name: "Canada",
                context: "DEI is built on a national identity of multiculturalism (a 'cultural mosaic'). There's a strong focus on human rights, equity, and Indigenous reconciliation.",
                focus: ["Ethnicity", "Indigenous Reconciliation", "Gender Identity", "Disability", "Bilingualism"],
                dos: ["Align with multiculturalism language.", "Highlight leadership accountability.", "Acknowledge Indigenous context."],
                donts: ["Ignore the importance of bilingualism.", "Treat Indigenous issues as an afterthought."]
            },
            mx: {
                name: "Mexico",
                context: "While strong anti-discrimination laws exist, social practice often lags. Socioeconomic status is a major factor, and there's a powerful local business case for disability inclusion.",
                focus: ["Disability Inclusion", "Socioeconomic Status", "Gender", "Indigenous Heritage"],
                dos: ["Emphasize the business case for disability inclusion.", "Address gender with cultural sensitivity.", "Acknowledge class dynamics."],
                donts: ["Apply a U.S.-centric model of race.", "Ignore the powerful influence of social class."]
            },
            cn: {
                name: "China",
                context: "DEI must be framed carefully within a state-controlled context, emphasizing harmony, respect, and collective success rather than Western-style social justice.",
                focus: ["Gender (Women in Leadership)", "Age (Intergenerational Teams)", "Regional/Migrant Status"],
                dos: ["Frame DEI in terms of 'harmony' and 'collaboration'.", "Focus on business benefits of age/gender diversity."],
                donts: ["Use activist language or critique state policy.", "Discuss sensitive ethnic or religious topics."]
            },
            sg: {
                name: "Singapore",
                context: "DEI is built on a foundation of multiculturalism and racial harmony. The challenge is moving beyond 'performative' DEI to build genuine psychological safety in a hierarchical culture.",
                focus: ["Racial & Religious Harmony", "Age", "Gender", "Disability"],
                dos: ["Focus on building psychological safety.", "Equip managers to solicit feedback non-confrontationally.", "Emphasize daily inclusive behaviors."],
                donts: ["Assume policy equals practice.", "Ignore the cultural norm of non-confrontation."]
            }
        },
        scenario: {
            start: {
                title: "Scenario: The Hiring Manager",
                text: "You are a manager hiring for a key role on your team. Your goal is to hire the best possible candidate. Let's walk through some key decisions in the process. First up: reviewing the job description.",
                options: [
                    { text: "Let's Begin", next: "q1" }
                ]
            },
            q1: {
                title: "Step 1: The Job Description",
                text: "You review the existing job description. It asks for a 'salesman' with '10 years of experience' and the ability to 'carry heavy equipment'. What's your approach?",
                options: [
                    { text: "Use it as-is. It has worked before.", next: "r1_bad" },
                    { text: "Update it. Change 'salesman' to 'salesperson', question the necessity of '10 years', and clarify the actual physical requirements.", next: "r1_good" }
                ]
            },
            r1_good: {
                title: "Great Choice!",
                text: "By using inclusive language and focusing on core competencies rather than arbitrary requirements, you've widened your potential talent pool significantly. Now, where do you source candidates?",
                options: [
                    { text: "Next Step", next: "q2" }
                ]
            },
            r1_bad: {
                title: "A Missed Opportunity",
                text: "Using the old description might deter qualified women, younger candidates, or people with disabilities from applying, shrinking your talent pool. Let's see what's next. Where do you source candidates?",
                 options: [
                    { text: "Next Step", next: "q2" }
                ]
            },
            q2: {
                title: "Step 2: Sourcing Candidates",
                text: "How will you find applicants for your role?",
                options: [
                    { text: "Use the standard company job board only.", next: "r2_bad" },
                    { text: "Use the job board AND post to diversity-focused platforms.", next: "r2_good" }
                ]
            },
            r2_good: {
                title: "Excellent Strategy!",
                text: "Proactively seeking candidates from diverse pools increases your chances of finding top talent that you might otherwise miss. You now have a strong, diverse group of applicants. You've structured the interviews to be consistent for everyone.",
                options: [
                    { text: "View Outcome", next: "final_good" }
                ]
            },
            r2_bad: {
                title: "A Narrow Approach",
                text: "Relying only on standard channels often results in a less diverse applicant pool, reinforcing the status quo. You move forward with the candidates you have.",
                options: [
                    { text: "View Outcome", next: "final_bad" }
                ]
            },
            final_good: {
                title: "Outcome: A Stronger Team",
                text: "Because you made a series of DEI-informed choices, you had a wide, diverse pool of highly qualified candidates. You hired someone with a unique perspective who is already contributing to innovation on your team. This is the power of inclusive practices.",
                options: [
                    { text: "Restart Scenario", next: "start" }
                ]
            },
            final_bad: {
                title: "Outcome: More of the Same",
                text: "Your process resulted in hiring a candidate very similar to the rest of the team. While competent, you missed an opportunity to bring in new perspectives that could drive innovation and better connect with a diverse customer base.",
                options: [
                    { text: "Restart Scenario", next: "start" }
                ]
            }
        }
    };

    // Navigation scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
            
            document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            this.classList.add('active');
        });
    });

    // Cake Analogy Interaction
    const cakeElements = document.querySelectorAll('.cake-element');
    const analogyDisplay = document.getElementById('cake-analogy-display');
    const analogyTitle = document.getElementById('cake-analogy-title');
    const analogyText = document.getElementById('cake-analogy-text');

    cakeElements.forEach(element => {
        element.addEventListener('click', () => {
            analogyTitle.textContent = element.dataset.title;
            analogyText.textContent = element.dataset.text;
            analogyDisplay.style.display = 'block';
        });
    });

    // Business Case Chart
    const ctx = document.getElementById('businessCaseChart').getContext('2d');
    const businessCaseChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Financial Performance', 'Innovation Revenue', 'Better Decision-Making', 'Employee Engagement'],
            datasets: [{
                label: 'Performance Uplift with Strong DEI',
                data: [36, 19, 87, 20],
                backgroundColor: [
                    'rgba(165, 106, 68, 0.6)',
                    'rgba(217, 163, 130, 0.6)',
                    'rgba(142, 90, 57, 0.6)',
                    'rgba(191, 133, 96, 0.6)'
                ],
                borderColor: [
                    'rgba(165, 106, 68, 1)',
                    'rgba(217, 163, 130, 1)',
                    'rgba(142, 90, 57, 1)',
                    'rgba(191, 133, 96, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            indexAxis: 'y',
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.parsed.x !== null) {
                                label += `+${context.parsed.x}%`;
                            }
                            return label;
                        }
                    }
                }
            },
            scales: {
                x: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Percentage Improvement (%)'
                    }
                }
            }
        }
    });

    // Global View Interaction
    const mapPins = document.querySelectorAll('.map-pin');
    const countryDisplay = document.getElementById('country-info-display');

    function displayCountryInfo(countryCode) {
        const country = data.countries[countryCode];
        if (!country) return;

        let dosList = country.dos.map(item => `<li class="flex items-start"><span class="text-green-500 mr-2 mt-1">‚úì</span><span>${item}</span></li>`).join('');
        let dontsList = country.donts.map(item => `<li class="flex items-start"><span class="text-red-500 mr-2 mt-1">‚úó</span><span>${item}</span></li>`).join('');
        let focusList = country.focus.map(item => `<span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">${item}</span>`).join('');

        countryDisplay.innerHTML = `
            <div class="fade-in">
                <h3 class="text-2xl font-bold text-[#A56A44] mb-2">${country.name}</h3>
                <p class="text-gray-600 mb-4">${country.context}</p>
                <h4 class="font-semibold text-gray-800 mb-2">Primary Focus Areas:</h4>
                <div class="mb-4">${focusList}</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-2">DO:</h4>
                        <ul class="space-y-2 text-gray-700">${dosList}</ul>
                    </div>
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-2">DON'T:</h4>
                        <ul class="space-y-2 text-gray-700">${dontsList}</ul>
                    </div>
                </div>
            </div>
        `;

        mapPins.forEach(pin => {
            pin.classList.toggle('active', pin.dataset.country === countryCode);
        });
    }

    mapPins.forEach(pin => {
        pin.addEventListener('click', () => {
            displayCountryInfo(pin.dataset.country);
        });
    });
    
    // Initialize with a default country
    displayCountryInfo('us');

    // Scenario Interaction
    const scenarioContent = document.getElementById('scenario-content');
    const scenarioOptions = document.getElementById('scenario-options');

    function loadScenario(stageKey) {
        const stage = data.scenario[stageKey];
        if (!stage) return;

        scenarioContent.innerHTML = `
            <h3 class="text-2xl font-semibold mb-2">${stage.title}</h3>
            <p class="text-gray-600">${stage.text}</p>
        `;

        scenarioOptions.innerHTML = '';
        stage.options.forEach(option => {
            const button = document.createElement('button');
            button.textContent = option.text;
            button.className = 'btn-secondary px-6 py-3 rounded-lg font-semibold';
            if(stage.options.length === 1) {
                button.className = 'btn-primary px-6 py-3 rounded-lg font-semibold sm:col-span-2';
            }
            button.addEventListener('click', () => loadScenario(option.next));
            scenarioOptions.appendChild(button);
        });
    }

    // Initialize scenario
    loadScenario('start');

});
</script>

</body>
</html>
